{% from "newsletter_macro.j2" import render_newsletter %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <style>
        :root {
            --background-colour: beige;
            --foreground-colour: rgb(231, 231, 231);
        }

        body {
            background-color: var(--background-colour);
            font-family: "Poppins", sans-serif;
        }

        main {
            display: flex;
            flex-direction: column;
        }

        form {
            background-color: var(--foreground-colour);
            border-radius: 0.5em;
            display: flex;
            flex-direction: column;
            padding: 1em 2em;
            gap: 2px;
            align-self: center;
        }

        form h2 {
            margin: 0;
        }

        section {
            align-self: center;
        }

        .submit-button {
            padding: 10px;
            margin: 5px;
            border: solid 1px rgb(44, 44, 44);
            border-radius: 5px;
            width: fit-content;
            align-self: center;
            background-color: rgb(0, 201, 0);
        }

        .submit-button:hover {
            color: white;
            background-color: rgb(0, 123, 0);
        }

        .newsletter {
            display: flex;
            flex-direction: column;
            background-color: var(--foreground-colour);
            align-self: center;
            margin: 2em;
            border-radius: 0.5em;
            padding: 0.5em;
            gap: 1em;
        }

        .newsletter h2 {
            margin: 0;
        }

        .newsletter h3 {
            margin: 0;
        }

        .newsletter section {
            background-color: white;
            padding: 0.2em;
        }

        .update-form {
            display: flex;
            flex-direction: row;
            padding: 1em;
            margin: 0.5em;
            gap: 1em;
        }

        .update-form .submit-button {
            padding: 0.3em;
        }
    </style>
</head>

<body>
    <header>
        <h1>One Last Question</h1>
    </header>

    <main>
        {{render_newsletter(newsletter)}}
    </main>
</body>

</html>