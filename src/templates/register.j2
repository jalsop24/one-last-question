{% extends "base.j2" %}

{% block title %}
Register
{% endblock title %}

{% block body %}

<h1>Register</h1>

<form method="post">
    <label for="email">Email: </label>
    <input id="email" type="email" autocomplete="username" name="email" required>
    <label for="name">Name: </label>
    <input id="name" type="text" name="display-name" required>
    <label for="new-password">Password: </label>
    <input id="new-password" type="password" autocomplete="new-password" name="new-password" required>
    <input class="submit-button" type="submit" value="Register">
</form>
{% endblock body %}